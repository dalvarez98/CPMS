@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="FormBox">
            <h2>Login or Register</h2>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-2">
                    <input placeholder="Username" type="text" asp-for="Login.Username" maxlength="16" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Login.Username"></span>
            </div>
            <div class="form-group row" style="margin-bottom:10px">
                <div class="col-2">
                    <input placeholder="Password" type="password" asp-for="Login.Password" maxlength="16" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Login.Password"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Login">
            </div>
        </div>
    </form>
</div>